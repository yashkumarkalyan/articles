const adminUrl = '/admin/index.html';
---

<script>
  const adminUrl = '/admin/index.html';
  
  // Check if we're on a blog post page
  const isBlogPost = window.location.pathname.startsWith('/post/');
  
  // Check if we're logged in
  const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
  
  // Only show edit button on blog posts when logged in
  if (isBlogPost && isLoggedIn) {
    const editButton = document.createElement('a');
    editButton.href = adminUrl;
    editButton.target = '_blank';
    editButton.className = 'fixed bottom-5 right-5 z-50 flex w-[120px] border-2 border-gray-500 rounded-full items-center justify-center py-[2.5px] font-bold text-[12px] uppercase text-black bg-white shadow-2xl';
    editButton.textContent = 'Edit in CMS';
    document.body.appendChild(editButton);
  }
</script>
